<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Switch
        android:id="@+id/switch_accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer aktivieren" />

    <Switch
        android:id="@+id/switch_gyroscope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroskop aktivieren"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samplingrate:"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_sampling_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
